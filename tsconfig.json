{
	"compilerOptions": {
		"module": "AMD",
		"removeComments": true,
		"noUnusedParameters": true,
		"disableSizeLimit": true,
		"target": "ES6",
		// "sourceMap": true,
		"lib": [
			"ES5",
			"ES2015.Core",
			"ES2015.Iterable",
			"ES2017.String",
			"ES2016.Array.Include",
			"DOM"
		],
		"moduleResolution": "node",
		"outFile": "./src/JS/compiled.js",
		"declaration": true,
        "declarationMap": true,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		// "diagnostics": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"strictBindCallApply": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noEmitHelpers": true,
		"noEmitOnError": false,
		"noUnusedLocals": true,
		"incremental": true,
		"extendedDiagnostics": true,
		"types": [],
		"skipDefaultLibCheck": true,
		"skipLibCheck": true
	},
	"files": [
		"./src/TS/init.ts",
		"./src/TS/helperFunctions.ts",
		"./src/TS/debug.ts",
		"./src/TS/classes/halo.ts",
		"./src/TS/classes/Health.ts",
		"./src/TS/classes/player.ts",
		"./src/TS/classes/projectile.ts",
		"./src/TS/classes/enemy.ts",
		"./src/TS/classes/particle.ts",
		"./src/TS/classes/highScores.ts",
		"./src/TS/shop.ts",
		"./src/TS/vars.ts",
		"./src/TS/Events.ts",
		"./src/TS/animate.ts",
		"./src/TS/functions.ts"
	]
}
